// Create Table
CREATE TABLE testing_table (
    -> name char(30),
    -> contact_name char(30),
    -> roll_no char(10));

// Delete column "name"
ALTER TABLE testing_table DROP name;

// Add field first_name and last_name to testing_table
ALTER TABLE testing_table ADD first_name char(20), ADD last_name char(20);

// Change datatype of roll_no from char to int.
ALTER TABLE testing_table MODIFY COLUMN roll_no int;
